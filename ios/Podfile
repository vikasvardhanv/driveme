# Uncomment this line to define a global platform for your project
platform :ios, '14.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      
      # Enable dSYM generation for all configurations
      config.build_settings['DEBUG_INFORMATION_FORMAT'] = 'dwarf-with-dsym'
      
      # Don't strip Swift symbols - causes issues with some frameworks
      config.build_settings['STRIP_SWIFT_SYMBOLS'] = 'NO'
      
      # Ensure bitcode is disabled (required for Flutter)
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      
      # Don't strip debugging symbols during copy phase
      config.build_settings['COPY_PHASE_STRIP'] = 'NO'
      config.build_settings['STRIP_INSTALLED_PRODUCT'] = 'NO'
      
      # Additional settings for proper archiving
      config.build_settings['ONLY_ACTIVE_ARCH'] = 'NO'
      
      # Fix for "Unsupported Swift architecture" in GoogleMapsUtils and others
      # This forces the simulator to use x86_64, which is more compatible with older binary frameworks
      config.build_settings["EXCLUDED_ARCHS[sdk=iphonesimulator*]"] = "arm64"
      
      # Disable dSYM validation warnings for frameworks without debug symbols
      # This is specifically for objective_c and other precompiled XCFrameworks
      config.build_settings['DWARF_DSYM_FILE_SHOULD_ACCOMPANY_PRODUCT'] = 'NO'
      config.build_settings['CLANG_DEBUG_INFORMATION_LEVEL'] = 'default'
      
      # For the objective_c framework specifically
      if target.name == 'objective_c' || target.name.include?('objective_c')
        puts "Configuring objective_c framework for App Store submission..."
        config.build_settings['GCC_GENERATE_DEBUGGING_SYMBOLS'] = 'YES'
        config.build_settings['DEBUG_INFORMATION_FORMAT'] = 'dwarf-with-dsym'
        config.build_settings['GENERATE_INFOPLIST_FILE'] = 'YES'
        # Disable dSYM requirement for this precompiled framework
        config.build_settings['DWARF_DSYM_FILE_SHOULD_ACCOMPANY_PRODUCT'] = 'NO'
      end
    end
  end

  # Apply architecture exclusion to the main project targets as well
  installer.aggregate_targets.each do |aggregate_target|
    aggregate_target.user_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings["EXCLUDED_ARCHS[sdk=iphonesimulator*]"] = "arm64"
      end
    end
    aggregate_target.user_project.save
  end
  
  # Add a shell script build phase to generate missing dSYMs
  installer.pods_project.targets.each do |target|
    if target.name == 'objective_c'
      puts "Adding dSYM generation script for #{target.name}..."
      
      # Check if the script phase already exists
      existing_phase = target.shell_script_build_phases.find { |phase| phase.name == 'Generate Missing dSYMs' }
      
      unless existing_phase
        phase = target.new_shell_script_build_phase('Generate Missing dSYMs')
        phase.shell_script = <<-SCRIPT
          set -e
          if [ "${CONFIGURATION}" = "Release" ] || [ "${CONFIGURATION}" = "Profile" ]; then
            echo "Checking for dSYMs..."
            
            # For objective_c framework, create an empty dSYM if it doesn't exist
            FRAMEWORK_NAME="objective_c"
            FRAMEWORK_PATH="${BUILT_PRODUCTS_DIR}/${FRAMEWORK_NAME}.framework"
            DSYM_PATH="${BUILT_PRODUCTS_DIR}/${FRAMEWORK_NAME}.framework.dSYM"
            
            if [ -d "$FRAMEWORK_PATH" ] && [ ! -d "$DSYM_PATH" ]; then
              echo "Attempting to generate dSYM for ${FRAMEWORK_NAME}..."
              xcrun dsymutil "${FRAMEWORK_PATH}/${FRAMEWORK_NAME}" -o "$DSYM_PATH" 2>/dev/null || {
                echo "Note: Could not generate dSYM for ${FRAMEWORK_NAME} (precompiled framework)"
              }
            fi
          fi
        SCRIPT
        phase.show_env_vars_in_log = '0'
      end
    end
  end
end
